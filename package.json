{
  "name": "about-shamil",
  "version": "1.0.0",
  "description": "This is a monorepo for the About Shamil project, which includes a web application, a backend API, and a background worker.",
  "license": "ISC",
  "author": "Shamil Khan",
  "type": "module",
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev": "turbo watch dev",
    "build:web": "pnpm --filter web build",
    "build": "turbo build",
    "lint": "turbo lint",
    "cleanup": "node scripts/cleanup.js",
    "ai-context": "node scripts/ai-context.js",
    "ai-context:web": "node scripts/ai-context.js --path apps/web"
  },
  "devDependencies": {
    "dotenv": "^17.3.1",
    "glob": "^13.0.6",
    "turbo": "^2.8.12"
  },
  "packageManager": "pnpm@10.30.1"
}
